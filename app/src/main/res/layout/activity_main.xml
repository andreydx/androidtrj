<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.example.student.hatsker.MainActivity">

    <Button
        android:id="@+id/toService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on"
        android:onClick="ToServButt"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/offService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="off"
        android:onClick="OffServButt"
        android:layout_below="@+id/toService"
        android:layout_alignStart="@+id/toService"
        android:layout_marginTop="14dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/offOn"
        android:text="Off"
        android:textSize="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp" />

    <Button
        android:id="@+id/getContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="Get all contacts"
        android:layout_below="@+id/offService"
        android:layout_alignStart="@+id/offService"/>
    <Button
        android:id="@+id/CallLg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get call log"
        android:layout_below="@+id/getContacts"
        android:layout_alignEnd="@+id/picture"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/sysInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get all Info"
        android:layout_below="@+id/CallLg"
        android:layout_alignStart="@+id/CallLg" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_alignTop="@+id/picture"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Last Picture"
        android:layout_below="@+id/sysInfo"
        android:layout_alignStart="@+id/toService" />

    <Button
        android:id="@+id/getFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get File"
        android:layout_below="@+id/picture"
        android:layout_alignStart="@+id/toService" />

    <Button
        android:id="@+id/FileGetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Files"
        android:layout_below="@+id/offService"
        android:layout_alignEnd="@+id/offOn" />

    <Button
        android:id="@+id/SongsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/getContacts"
        android:layout_alignStart="@+id/getContacts"
        android:layout_below="@+id/offService"
        android:layout_marginTop="17dp"
        android:text="Get Songs" />

    <Button
        android:id="@+id/getScr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/FileGetter"
        android:layout_alignTop="@+id/getContacts"
        android:text="Get screen" />


    <Button
        android:id="@+id/GetGpsAndGsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/getFile"
        android:layout_below="@+id/getFile"
        android:text="Get GPS/GSM" />

    <Button
        android:id="@+id/GetSMS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get SMS"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to new act"
        android:id="@+id/goTo"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/getAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/getScr"
        android:layout_alignStart="@+id/getScr"
        android:layout_below="@+id/getScr"
        android:text="GET ACCOUNT" />


</RelativeLayout>
